<!DOCTYPE html>
<html>
  <head>
    <title>Bon Voyage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <style>
      a {
        font-family: 'Alegreya Sans SC', sans-serif;
        text-decoration: none;
        text-transform: uppercase;
        color: #63819b;
      }

      .page-wrapper {
        font-family: 'Lato', sans-serif;
      }
    </style>
  </head>

  <body>

    <div class="nav-bar">
      <nav>
        <ul class="nav-container">
          <span id="logo">
            <li>
              <%= link_to root_path do %>
                <%= image_tag('bv_weblogo.png', height: '47', width: '400', class: "img-fluid") %>
              <% end %>
            </li>
          </span>

          <span class="nav-links">
            <li>
              <button type='button' class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Work <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Web", work_web_works_path(Work.find(1).id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
                <li><%= link_to "Art", work_art_works_path(Work.find(2).id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %></li>
              </ul>
            </li>
            <li><%= link_to 'About', about_path %></li>
            <li><%= link_to 'Contact', contact_path %></li>
          </span>
        </ul>
      </nav>
  	</div>

    <div class="page-wrapper">
      <%= yield %>
    </div>
  </body>
</html>
